@model CollectionApp.Application.ViewModels.ReceiptDetailVM
@{
    ViewData["Title"] = "Receipt Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Payment" asp-action="Index">Payments</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Payment" asp-action="Details" asp-route-id="@Model.PaymentId">Payment Details</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Receipt</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h4 class="mb-0">
                                <i class="fas fa-receipt me-2"></i>Receipt Details
                            </h4>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-controller="Payment" asp-action="Details" asp-route-id="@Model.PaymentId" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-arrow-left me-1"></i>Back to Payment
                            </a>
                            <button type="button" class="btn btn-success me-2" onclick="downloadReceipt('@Model.PaymentId', 'pdf')">
                                <i class="fas fa-download me-1"></i>Download PDF
                            </button>
                            <button type="button" class="btn btn-warning" onclick="regenerateReceipt('@Model.PaymentId')">
                                <i class="fas fa-sync me-1"></i>Regenerate
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- Receipt Information -->
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Receipt Information</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Receipt Number:</dt>
                                        <dd class="col-sm-8">
                                            <span class="fw-bold text-primary">@Model.ReceiptNumber</span>
                                        </dd>

                                        <dt class="col-sm-4">Payment ID:</dt>
                                        <dd class="col-sm-8">
                                            <span class="text-muted">@Model.PaymentId</span>
                                        </dd>

                                        <dt class="col-sm-4">Amount:</dt>
                                        <dd class="col-sm-8">
                                            <span class="fw-bold text-success fs-5">
                                                @Tracker_Money.Helpers.CurrencyFormatter.FormatCurrency(Model.Amount, Model.Currency)
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">Currency:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">@Model.Currency</span>
                                        </dd>

                                        <dt class="col-sm-4">Description:</dt>
                                        <dd class="col-sm-8">
                                            <span class="text-muted">@Model.Description</span>
                                        </dd>

                                        <dt class="col-sm-4">Generated Date:</dt>
                                        <dd class="col-sm-8">
                                            <span class="text-muted">@Model.GeneratedDate.ToString("MMMM dd, yyyy HH:mm")</span>
                                        </dd>

                                        <dt class="col-sm-4">Generated By:</dt>
                                        <dd class="col-sm-8">
                                            <span class="text-muted">@Model.GeneratedByStaffName</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Receipt Preview -->
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-eye me-2"></i>Receipt Preview</h6>
                                </div>
                                <div class="card-body text-center">
                                    <div class="receipt-preview border p-3 bg-light">
                                        <h5 class="text-center mb-3">RECEIPT</h5>
                                        <hr>
                                        <div class="text-start">
                                            <p><strong>Receipt #:</strong> @Model.ReceiptNumber</p>
                                            <p><strong>Date:</strong> @Model.GeneratedDate.ToString("MMM dd, yyyy")</p>
                                            <p><strong>Amount:</strong> @Tracker_Money.Helpers.CurrencyFormatter.FormatCurrency(Model.Amount, Model.Currency)</p>
                                            <p><strong>Description:</strong> @Model.Description</p>
                                            <p><strong>Generated By:</strong> @Model.GeneratedByStaffName</p>
                                        </div>
                                        <hr>
                                        <small class="text-muted">This is a system-generated receipt</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Payment" asp-action="Details" asp-route-id="@Model.PaymentId" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Back to Payment Details
                                </a>
                                <div>
                                    <button type="button" class="btn btn-success me-2" onclick="downloadReceipt('@Model.PaymentId', 'pdf')">
                                        <i class="fas fa-file-pdf me-1"></i>Download PDF
                                    </button>
                                    <button type="button" class="btn btn-info me-2" onclick="downloadReceipt('@Model.PaymentId', 'zip')">
                                        <i class="fas fa-file-archive me-1"></i>Download ZIP
                                    </button>
                                    <button type="button" class="btn btn-warning" onclick="regenerateReceipt('@Model.PaymentId')">
                                        <i class="fas fa-sync me-1"></i>Regenerate Receipt
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function downloadReceipt(paymentId, format) {
            const url = `/Payment/DownloadReceipt/${paymentId}?format=${format}`;
            window.open(url, '_blank');
        }

        function regenerateReceipt(paymentId) {
            if (confirm('Are you sure you want to regenerate the receipt? This will create a new receipt number.')) {
                // Create a form and submit it
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/Payment/RegenerateReceipt';
                
                const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '__RequestVerificationToken';
                csrfInput.value = csrfToken;
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = paymentId;
                
                form.appendChild(csrfInput);
                form.appendChild(idInput);
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
}

@section Styles {
    <style>
        .receipt-preview {
            font-family: 'Courier New', monospace;
            background: linear-gradient(45deg, #f8f9fa 25%, transparent 25%), 
                        linear-gradient(-45deg, #f8f9fa 25%, transparent 25%), 
                        linear-gradient(45deg, transparent 75%, #f8f9fa 75%), 
                        linear-gradient(-45deg, transparent 75%, #f8f9fa 75%);
            background-size: 20px 20px;
            background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
        }
    </style>
} 