@model Tracker_Money.Models.PagedViewModel<CollectionApp.Application.ViewModels.PaymentListVM>
@{
    ViewData["Title"] = "Payment Search Results";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Payment" asp-action="Index">Payments</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Payment" asp-action="AdvancedSearch">Advanced Search</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Search Results</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h4 class="mb-0">
                                <i class="fas fa-search me-2"></i>Payment Search Results
                            </h4>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-action="AdvancedSearch" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-search me-1"></i>New Search
                            </a>
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Results Summary -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Found <strong>@Model.TotalCount</strong> payment(s) matching your criteria
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <button type="button" class="btn btn-success" onclick="exportPayments('excel')">
                                <i class="fas fa-file-excel me-1"></i>Export Excel
                            </button>
                            <button type="button" class="btn btn-danger" onclick="exportPayments('pdf')">
                                <i class="fas fa-file-pdf me-1"></i>Export PDF
                            </button>
                        </div>
                    </div>

                    <!-- Search Results -->
                    <partial name="_PaymentSearchResults" model="Model" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportPayments(format) {
            // Get current search parameters from the URL or form
            const url = `/Payment/Export?format=${format}`;
            window.open(url, '_blank');
        }
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/Payment/PaymentOperations.css" />
} 